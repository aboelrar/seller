<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.applicationDetails">
    <include layout="@layout/appbar"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:orientation="horizontal"
        android:gravity="right"
        android:weightSum="1">

        <LinearLayout
            android:layout_weight=".8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:weightSum="4"
            android:paddingRight="@dimen/_10sdp">
            <LinearLayout
                android:layout_weight=".8"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_height="0dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="محمد ابراهيم"
                    android:id="@+id/name"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/_3sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="الاسم:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_13ssp"
                    android:gravity="center_vertical"/>

            </LinearLayout>
            <LinearLayout
                android:layout_weight=".8"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_height="0dp">
                <TextView
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="match_parent"
                    android:text="01234567891"
                    android:textSize="@dimen/_13ssp"
                    android:id="@+id/phone"
                    android:textColor="@color/textcolor"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/_3sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="رقم الهاتف"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_13ssp"
                    android:gravity="center_vertical"/>

            </LinearLayout>
            <LinearLayout
                android:layout_weight=".8"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_height="0dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="ريال"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/_2sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="140"
                    android:id="@+id/price"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/_3sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="المجموع:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_13ssp"
                    android:gravity="center_vertical"/>

            </LinearLayout>
            <LinearLayout
                android:layout_weight=".8"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_height="0dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="مساء"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/_2sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:textSize="@dimen/_13ssp"
                    android:id="@+id/time"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/_3sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="الوقت:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_13ssp"
                    android:gravity="center_vertical"/>

            </LinearLayout>
        </LinearLayout>
</LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/openmap"
                android:layout_gravity="right"
                android:id="@+id/openmap"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/textcolor"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:textSize="@dimen/_13ssp"
                android:paddingTop="@dimen/_10sdp"
                android:background="@drawable/rectangle"
                android:paddingRight="@dimen/_5sdp"
                android:text="يرجى شحن النمنتجات قبل صباحا"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:text="@string/done"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12ssp"
                    android:background="@color/green"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/applicationsdetailslist"></android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>